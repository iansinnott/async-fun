body
  background #fafafa
  text-align center

ul
  list-style none
  margin 0
  padding 0

a
  text-decoration none

.Randomizer
  margin-top 20px
  font-size 70px

.clicker
  font-size 20px
  padding 10px 14px

.UserList
  margin-top 40px

.UserListItem
  position relative
  display flex
  align-items center
  width 300px
  background #efefef
  border 1px solid #ddd
  margin 0 auto
  &:not(:last-child)
    margin-bottom 10px

  a
    display block
    flex 1 100%
    padding 10px
    line-height 1
    text-align left
    margin 0

.avatar
  width 50px
  height 50px
  flex-grow 0
  flex-shrink 0

.refresh
  margin-bottom 20px

.remove
  position absolute
  top 50%
  right 10px
  transform translateY(-50%)
